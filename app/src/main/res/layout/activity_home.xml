<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:scrollbarThumbHorizontal="@color/chalkboard_color"
    android:scrollbarThumbVertical="@color/chalkboard_color">

    <TextView
        android:id="@+id/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="17dp"
        android:text="@string/home_header"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_baseline_add_location_alt_24"
        tools:ignore="TextContrastCheck" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewMap"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_below="@id/headerText"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="12dp">

        <org.osmdroid.views.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/schools_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardViewMap"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="5dp"
        android:text="@string/btns_header"
        android:textAlignment="textStart"
        android:textColor="@color/secondary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_above="@id/bottom_navigation"
        android:layout_below="@id/schools_text"
        android:background="@color/primary">

        <LinearLayout
            android:id="@+id/firstLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonKesariani"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/home_school_buttons_o2"
                android:contentDescription="@string/app_name"
                android:drawableEnd="@drawable/ic_baseline_arrow_circle_right_24"
                android:padding="10dp"
                android:singleLine="true"
                android:text="@string/kesariani"
                android:textAlignment="textStart"
                android:textColor="@color/btnTextColor"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <Button
                android:id="@+id/buttonThiba"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/home_school_buttons_o2"
                android:contentDescription="@string/app_name"
                android:drawableEnd="@drawable/ic_baseline_arrow_circle_right_24"
                android:padding="10dp"
                android:singleLine="true"
                android:text="@string/thiba"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/btnTextColor"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />


            <Button
                android:id="@+id/buttonAtalanti"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/home_school_buttons_o2"
                android:contentDescription="@string/app_name"
                android:drawableEnd="@drawable/ic_baseline_arrow_circle_right_24"
                android:padding="10dp"
                android:singleLine="true"
                android:text="@string/atalanti"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/btnTextColor"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

            <Button
                android:id="@+id/buttonKarpenisi"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/home_school_buttons_o2"
                android:contentDescription="@string/app_name"
                android:drawableEnd="@drawable/ic_baseline_arrow_circle_right_24"
                android:padding="10dp"
                android:singleLine="true"
                android:text="@string/karpenisi"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/btnTextColor"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

            <Button
                android:id="@+id/buttonKaristos"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/home_school_buttons_o2"
                android:contentDescription="@string/app_name"
                android:drawableEnd="@drawable/ic_baseline_arrow_circle_right_24"
                android:padding="10dp"
                android:singleLine="true"
                android:text="@string/karistos"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/btnTextColor"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

            <Button
                android:id="@+id/buttonKerkira"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/home_school_buttons_o2"
                android:contentDescription="@string/app_name"
                android:drawableEnd="@drawable/ic_baseline_arrow_circle_right_24"
                android:padding="10dp"
                android:singleLine="true"
                android:text="@string/kerkira"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/btnTextColor"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

            <Button
                android:id="@+id/buttonLamia"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/home_school_buttons_o2"
                android:contentDescription="@string/app_name"
                android:drawableEnd="@drawable/ic_baseline_arrow_circle_right_24"
                android:padding="10dp"
                android:singleLine="true"
                android:text="@string/lamia"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/btnTextColor"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

            <Button
                android:id="@+id/buttonMarakomi"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/home_school_buttons_o2"
                android:contentDescription="@string/app_name"
                android:drawableEnd="@drawable/ic_baseline_arrow_circle_right_24"
                android:padding="10dp"
                android:singleLine="true"
                android:text="@string/makrakomi"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/btnTextColor"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />


            <Button
                android:id="@+id/buttonXalkida"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/home_school_buttons_o2"
                android:contentDescription="@string/app_name"
                android:drawableEnd="@drawable/ic_baseline_arrow_circle_right_24"
                android:padding="10dp"
                android:singleLine="true"
                android:text="@string/xalkida"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/btnTextColor"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

            <Button
                android:id="@+id/buttonDionisos"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/home_school_buttons_o2"
                android:contentDescription="@string/app_name"
                android:drawableEnd="@drawable/ic_baseline_arrow_circle_right_24"
                android:padding="10dp"
                android:singleLine="true"
                android:src="@drawable/ic_launcher_background"
                android:text="@string/dionisos"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/btnTextColor"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

            <Button
                android:id="@+id/buttonNigritas"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/home_school_buttons_o2"
                android:contentDescription="@string/app_name"
                android:drawableEnd="@drawable/ic_baseline_arrow_circle_right_24"
                android:padding="10dp"
                android:singleLine="true"
                android:src="@drawable/ic_launcher_background"
                android:text="@string/nigritas"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/btnTextColor"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

            <Button
                android:id="@+id/buttonThessaloniki"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/home_school_buttons_o2"
                android:contentDescription="@string/app_name"
                android:drawableEnd="@drawable/ic_baseline_arrow_circle_right_24"
                android:padding="10dp"
                android:singleLine="true"
                android:text="@string/peiramthesallonikis"
                android:textAlignment="textStart"
                android:textColor="@color/btnTextColor"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <Button
                android:id="@+id/buttonKriti"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="10dp"
                android:height="50dp"
                android:background="@drawable/home_school_buttons_o2"
                android:contentDescription="@string/app_name"
                android:drawableEnd="@drawable/ic_baseline_arrow_circle_right_24"
                android:padding="10dp"
                android:singleLine="true"
                android:text="@string/dimhrakleio"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/btnTextColor"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="DuplicateSpeakableTextCheck" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/nav_background_curved"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>